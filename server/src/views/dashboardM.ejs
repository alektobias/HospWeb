                        <h3 style="overflow-y: hidden;">Cadastrar procedimento</h3>
                        <form >
                            <input placeholder="CRM" class="form-control my-2" id="crm"/>
                            <input placeholder="CPF" class="form-control my-2" id="cpf"/>
                            <div class="form-group d-inline-flex w-100">
                                <select class="form-control mr-1" id="tipo">
                                    <option value="consulta">Consulta</option>
                                    <option value="exame">Exame</option>
                                    <option value="prontuario">Prontuário</option>
                                </select>
                                <input placeholder="Data (DD/MM/AAAA)" class="form-control" id="data"/>
                            </div>
                            <textarea class="form-control" id="desc"></textarea>
                            <button type="button" class="btn btn-primary mt-2 float-right" onclick="adicionarProcedimento()">Adiconar Procedimento</button>
