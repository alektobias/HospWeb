<div style="height: 100vh; background-color: lightblue; display: flex; flex-direction: column; justify-content: center;">
    <div class="row d-flex justify-content-center">
        <div class="col-4 border text-center" style="background-color: white; padding: 30px;">
            <div class="row d-inline-flex mb-3" >
                    <i class="fas fa-user-injured" style="font-size: 28px; margin-right: 10px; display: flex; align-items: center;"></i>
                    <h3 style="overflow-y: hidden;">Acesso Paciente</h3>
            </div>
            <div class="row d-flex">
                <% if(error.hasError){ %>
                <div class="alert alert-danger mx-auto" role="alert">
                    <%- error.errorMsg %>
                </div>
                <%}%>
                <form class="mx-auto" style="width: 75%;" method="post">
                    <input type="text" name="cpf" placeholder="CPF" class="form-control my-2" value="<%- cpf %>">
                    <input type="password" name="senha" placeholder="Senha" class="form-control my-2">
                    <button type="submit" class="btn btn-primary btn-block">Entrar</button>
                </form>
            </div>
            <div class="row d-flex mt-5">
                <a href="/paciente/cadastro" class="mx-auto">Cadastrar-se</a>
            </div>
            <div class="row d-flex">
                <a href="/medico/acesso" class="mx-auto">Acessar como m√©dico</a>
            </div>
        </div>
    </div>
</div>